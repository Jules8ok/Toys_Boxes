

<h1>Thank you for your order</h1>
<div class="product-screen-container">
  <div class="product-screen-left-container">
    <div class="product-photo">
      <%= image_tag @order.product.photo_url, width: '100%' %>
    </div>
  </div>
  <div class="product-screen-right-container">

    <h2>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state%></span></small></h2>
    <ul class="list-unstyled">
      <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
      <li><strong>PRODUCT</strong> <%= @order.product.name %> [<%= @order.product_sku %>]</li>
      <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
    </li>
  </ul>
  <p>Estimated delivery in <strong>5 business days</strong></p>

</div>
</div>
</div>




